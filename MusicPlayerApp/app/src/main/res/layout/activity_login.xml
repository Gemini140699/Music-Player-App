<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_screen_music_player"
        android:padding="@dimen/padding_16"
        tools:context=".login.LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/padding_16">


            <Button
                android:id="@+id/btn_sign_in_facebook"
                style="@style/CustomButtonSignIn"
                android:backgroundTint="@color/fui_bgFacebook"
                android:drawableLeft="@drawable/fui_ic_facebook_white_22dp"
                android:text="@string/sign_in_facebook"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/btn_sign_in_google"
                style="@style/CustomButtonSignIn"
                android:layout_marginBottom="@dimen/margin_16"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/fui_ic_googleg_color_24dp"
                android:text="@string/sign_in_google"
                android:textColor="@color/black" />
        </LinearLayout>


    </RelativeLayout>
</layout>